{
    "version": "1.0.0",
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "declaration": true,
        "rootDir": "./src",
        "declarationDir": "./build",
        "outDir": "./build",
        "suppressImplicitAnyIndexErrors": true,
        "lib": [],
        "sourceMap": true
    },
    "exclude": [
        "node_modules",
        "test"
    ]
}