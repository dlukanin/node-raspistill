{
    "version": "1.0.0",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "declaration": true,
        "rootDir": "./src",
        "declarationDir": "./build",
        "outDir": "./build",
        "suppressImplicitAnyIndexErrors": true,
        "lib": [
            "es5",
            "es6",
            "es2015.promise",
            "es2015.collection"
        ],
        "sourceMap": true
    },
    "exclude": [
        "node_modules",
        "test"
    ]
}